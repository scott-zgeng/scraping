{
  "manifest_version": 2,
  "name": "Visual Web Scraping IDE",
  "minimum_chrome_version": "40.0.0.0",
  "version": "1.0",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "config.js",
        "main.js"
      ]
    }
  },
  "permissions": [
    {"fileSystem": ["write"]},
    "unlimitedStorage",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "http://127.0.0.1/*",
    "http://localhost/*",
    "webview"
  ],


  "webview": {
    "partitions": [
      {
        "name": "static",
        "accessible_resources": ["*.html", "*.css"]
      },
      {
        "name": "export",
        "accessible_resources": ["*.html", "*.css", "*.js"]
      }

    ]
  }
}
